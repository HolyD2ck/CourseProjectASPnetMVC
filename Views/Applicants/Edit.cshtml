@model CourseProjectBlazor.Models.Applicant

@{
    ViewData["Title"] = "Edit";
}

<h1 class="t">Изменить</h1>

<h4>Соискатель</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="Фамилия" class="control-label"></label>
                <input asp-for="Фамилия" class="form-control" />
                <span asp-validation-for="Фамилия" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Имя" class="control-label"></label>
                <input asp-for="Имя" class="form-control" />
                <span asp-validation-for="Имя" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Отчество" class="control-label"></label>
                <input asp-for="Отчество" class="form-control" />
                <span asp-validation-for="Отчество" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Образование" class="control-label"></label>
                <input asp-for="Образование" class="form-control" />
                <span asp-validation-for="Образование" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Специальность" class="control-label"></label>
                <input asp-for="Специальность" class="form-control" />
                <span asp-validation-for="Специальность" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Дата_Рождения" class="control-label"></label>
                <input asp-for="Дата_Рождения" class="form-control" />
                <span asp-validation-for="Дата_Рождения" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Телефон" class="control-label"></label>
                <input asp-for="Телефон" class="form-control" />
                <span asp-validation-for="Телефон" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Фото" class="control-label"></label>
                <input asp-for="Фото" type="file" class="form-control" />
                <span asp-validation-for="Фото" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Вернуться к просмотру</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
